<resources>
    <declare-styleable name="TeamLayout">
        <attr name="canEdit" format="boolean" />
        <attr name="isVertical" format="boolean" />
        <attr name="teamColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CutThroatPlayersLayout">
        <attr name="ctpl_canEdit" format="boolean" />
        <attr name="ctpl_bgColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PlayersLayout">
        <attr name="pl_canEdit" format="boolean" />
        <attr name="pl_bgColor" format="color" />
        <attr name="pl_maxPlayers" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CropOverlay">
        <attr name="cutoutViewId" format="reference" />
        <attr name="frameColor" format="color" />
        <attr name="frameWidth" format="dimension" />
        <attr name="maskColor" format="color" />
    </declare-styleable>
</resources>
