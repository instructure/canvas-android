<resources>

    <style name="LoginFlowTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/textLightest</item>
        <item name="colorPrimaryDark">@color/textLightest</item>
        <item name="colorAccent">@color/backgroundDark</item>
        <item name="android:windowBackground">@color/backgroundLightest</item>
    </style>

    <style name="LoginFlowTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#FFFFFF</item>
    </style>

    <style name="LoginFlowTheme.Splash_Student" parent="@style/LoginFlowTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background_student</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="LoginFlowTheme.Splash_Teacher" parent="@style/LoginFlowTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background_teacher</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="ToolBarStyleDark" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/licorice</item>
        <item name="android:textColorPrimary">@color/licorice</item>
        <item name="android:textColorSecondary">@color/licorice</item>
        <item name="actionMenuTextColor">@color/licorice</item>
    </style>

    <!--Text Styles-->
    <style name="TextStyle" parent="android:Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle.Primary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textDarkest</item>
    </style>

    <style name="TextStyle.Primary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Secondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <!--Button Styles-->
    <style name="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textLightest</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
