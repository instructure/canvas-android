<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/rce_view_min_height"
    android:background="@color/rce_backgroundColor">

    <instructure.rceditor.RCETextEditor
        android:id="@+id/rce_webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/rce_bottomDivider"/>

    <View
        android:id="@+id/rce_bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/rce_divider"
        android:layout_above="@+id/rceControllerWrapper"/>

    <FrameLayout
        android:id="@+id/rce_colorPickerWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

        <include
            android:id="@+id/rceColorPicker"
            layout="@layout/rce_color_picker"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/rceControllerWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/rceController"
            layout="@layout/rce_controller"/>

    </FrameLayout>

</RelativeLayout>