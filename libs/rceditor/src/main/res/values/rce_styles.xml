<resources>

    <style name="AppThemeRCE" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="AppThemeRCE.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RCE_Item">
        <item name="android:layout_width">@dimen/rce_item_height</item>
        <item name="android:layout_height">@dimen/rce_item_height</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:tint">@color/rce_defaultTextColor</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RCE_ColorPickerItem">
        <item name="android:layout_width">@dimen/rce_item_height</item>
        <item name="android:layout_height">@dimen/rce_item_height</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="RCE_ToolBarStyleDark" parent="AppThemeRCE">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="RCE_TextInputLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>