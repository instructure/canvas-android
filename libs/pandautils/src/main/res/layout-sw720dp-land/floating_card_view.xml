<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/floatingCardVerticalPadding"
        android:paddingTop="@dimen/floatingCardVerticalPadding"
        android:paddingLeft="@dimen/floatingCardHorizontalPadding"
        android:paddingRight="@dimen/floatingCardHorizontalPadding"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:orientation="horizontal">
        <!-- Place holder for blank space -->
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <!-- CardView takes 2/3 of the screen -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:contentPadding="-2dp"
            card_view:cardUseCompatPadding="true"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:clickable="true"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>
</ScrollView>
