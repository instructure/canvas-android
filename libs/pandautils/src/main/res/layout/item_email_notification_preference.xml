<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.instructure.canvasapi2.managers.NotificationPreferencesManager" />

        <variable
            name="itemViewModel"
            type="com.instructure.pandautils.features.notification.preferences.itemviewmodels.EmailNotificationCategoryItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:listPreferredItemHeight" >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/frequencyGuideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="120dp"/>

        <TextView
            android:id="@+id/frequency"
            style="@style/TextFont.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/toggle"
            android:text="@{itemViewModel.data.frequency}"
            android:textSize="16sp"
            android:textFontWeight="400"
            android:inputType="textCapWords"
            android:layout_marginEnd="16dp"
            android:textColor="@color/textDark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/frequencyGuideline"
            app:layout_constraintHorizontal_bias="1.0"
            tools:text="Immediately" />

        <TextView
            android:id="@+id/title"
            style="@style/TextFont.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/toggle"
            android:text="@{itemViewModel.data.title}"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:textColor="@color/textDarkest"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/frequencyGuideline"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="Administrative Notifications" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/backgroundMedium"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>