<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemViewModel"
            type="com.instructure.pandautils.features.elementary.importantdates.itemviewmodels.ImportantDatesItemViewModel" />

        <import type="com.instructure.pandautils.utils.ColorUtils" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:onClick="@{() -> itemViewModel.open()}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="@{@color/defaultTrackColor}">

            <View
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:background="@drawable/important_dates_background"
                android:backgroundTint="@{ColorUtils.parseColor(itemViewModel.data.courseColor)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/canvasRed" />

            <TextView
                android:id="@+id/courseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:letterSpacing="0.1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@{itemViewModel.data.courseName}"
                android:textAllCaps="true"
                android:textColor="@{ColorUtils.parseColor(itemViewModel.data.courseColor)}"
                android:textSize="10dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Math"
                tools:textColor="@color/canvasRed" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:tint="@{ColorUtils.parseColor(itemViewModel.data.courseColor)}"
                app:imageRes="@{itemViewModel.data.icon}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/courseName"
                tools:src="@drawable/ic_quiz"
                tools:tint="@color/canvasRed" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:text="@{itemViewModel.data.title}"
                android:textColor="@color/defaultTextDark"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="@id/icon"
                tools:text="Chapter 7 Test" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>