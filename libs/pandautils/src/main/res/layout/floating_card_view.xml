<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- For devices with less than 600sw layouts the LinearLayout is pretending to be the cardView
           Fixes an issue where there is a sliver of padding around the edges -->
    <LinearLayout
        android:id="@+id/cardView"
        android:background="@color/canvasBackgroundLight"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/floatingCardVerticalPadding"
        android:paddingTop="@dimen/floatingCardVerticalPadding"
        android:paddingLeft="@dimen/floatingCardHorizontalPadding"
        android:paddingRight="@dimen/floatingCardHorizontalPadding"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
</ScrollView>
