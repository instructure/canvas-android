<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/not_a_teacher_header"
        style="@style/TextFont.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/not_a_teacher"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:text="@string/notATeacherDescription"
        android:textColor="@color/textDark"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/studentLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp">

        <ImageView
            android:id="@+id/studentCanvasLogo"
            style="@style/NotATeacher.CanvasLogo"
            android:layout_centerVertical="true"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ic_canvas_logo_student"/>

        <ImageView
            android:id="@+id/canvasWordmarkStudent"
            android:layout_centerVertical="true"
            style="@style/NotATeacher.CanvasWordmark"
            android:layout_toEndOf="@id/studentCanvasLogo"
            app:srcCompat="@drawable/canvas_wordmark_leftaligned_student"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/parentLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/parentCanvasLogo"
            style="@style/NotATeacher.CanvasLogo"
            android:layout_centerVertical="true"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ic_canvas_logo_parent"/>

        <ImageView
            android:id="@+id/canvasWordmarkParent"
            android:layout_centerVertical="true"
            style="@style/NotATeacher.CanvasWordmark"
            android:layout_toEndOf="@id/parentCanvasLogo"
            app:srcCompat="@drawable/canvas_wordmark_leftaligned_parent"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/login"
        style="@style/TextFont.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:minWidth="130dp"
        android:padding="12dp"
        android:text="@string/login"
        android:textColor="@color/textDark"
        android:textSize="16sp"/>

</LinearLayout>
