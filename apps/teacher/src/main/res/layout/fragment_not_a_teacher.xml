<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/not_a_teacher_header"
        style="@style/TextFont.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/not_a_teacher"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:text="@string/not_a_teacher_tap_to_visit_play_store"
        android:textColor="#8B969E"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/studentLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp">

        <ImageView
            android:id="@+id/studentCanvasLogo"
            style="@style/NotATeacher.CanvasLogo"
            android:layout_centerVertical="true"
            android:importantForAccessibility="no"
            android:tint="@color/login_studentAppTheme"
            app:srcCompat="@drawable/vd_canvas_logo"/>

        <ImageView
            android:id="@+id/canvasWordmarkStudent"
            style="@style/NotATeacher.CanvasWordmark"
            android:layout_toEndOf="@id/studentCanvasLogo"/>

        <TextView
            style="@style/NotATeacher.SubText"
            android:layout_below="@+id/canvasWordmarkStudent"
            android:layout_toEndOf="@id/studentCanvasLogo"
            android:text="@string/appUserTypeStudent"
            android:textColor="@color/login_studentAppTheme"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/parentLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/parentCanvasLogo"
            style="@style/NotATeacher.CanvasLogo"
            android:layout_centerVertical="true"
            android:importantForAccessibility="no"
            android:tint="@color/login_parentAppTheme"
            app:srcCompat="@drawable/vd_canvas_logo"/>

        <ImageView
            android:id="@+id/canvasWordmarkParent"
            style="@style/NotATeacher.CanvasWordmark"
            android:layout_toEndOf="@id/parentCanvasLogo"/>

        <TextView
            style="@style/NotATeacher.SubText"
            android:layout_below="@+id/canvasWordmarkParent"
            android:layout_toEndOf="@id/parentCanvasLogo"
            android:text="@string/appUserTypeParent"
            android:textColor="@color/login_parentAppTheme"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/login"
        style="@style/TextFont.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:minWidth="130dp"
        android:padding="12dp"
        android:text="@string/login"
        android:textColor="#8B969E"
        android:textSize="16sp"/>

</LinearLayout>
