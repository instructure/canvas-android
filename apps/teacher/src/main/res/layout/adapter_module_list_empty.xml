<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moduleListEmptyView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minHeight="48dp"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:id="@+id/emptyIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_panda_nomodules"/>

    <TextView
        android:id="@+id/emptyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/noModules"
        android:textColor="@color/defaultTextDark"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/emptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/noModulesSubtext"
        android:textColor="@color/defaultTextGray"
        android:textSize="16sp"/>

</LinearLayout>
