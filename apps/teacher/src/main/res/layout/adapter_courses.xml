<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp"
    tools:backgroundTint="@color/defaultTextDark"
    tools:layout_width="156dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/courseImageView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@+id/textContainer"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/courseColorIndicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="10dp"
                android:importantForAccessibility="no"
                    android:background="@drawable/ic_circle"
                    android:backgroundTint="@color/canvasDefaultAccent"/>

                <ImageView
                    android:id="@+id/overflow"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:contentDescription="@string/courseOptions"
                    android:focusable="true"
                    android:paddingTop="13dp"
                    android:paddingEnd="13dp"
                    android:paddingStart="17dp"
                    android:paddingBottom="17dp"
                    app:srcCompat="@drawable/ic_overflow_white_18dp"/>

            </FrameLayout>

        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:minHeight="80dp"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/courseImageView">

            <TextView
                android:id="@+id/titleTextView"
                style="@style/TextFont.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:labelFor="@+id/cardView"
                android:maxLines="2"
                android:textSize="16sp"
                    tools:text="American Literature 401"
                    tools:textColor="@color/defaultTextDark"/>

            <TextView
                android:id="@+id/courseCode"
                style="@style/TextFont.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/defaultTextGray"
                android:textSize="12sp"
                tools:ignore="Deprecated"
                tools:text="LIT 401" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
