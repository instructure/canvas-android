<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:listPreferredItemHeightLarge"
    android:orientation="horizontal"
    android:foreground="?attr/selectableItemBackground"
    android:padding="4dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="8dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginStart="4dp"
            android:padding="4dp"
            tools:src="@drawable/ic_group" />

        <View
            android:id="@+id/unreadMark"
            android:layout_width="@dimen/unread_message_marker_size"
            android:layout_height="@dimen/unread_message_marker_size"
            android:layout_gravity="top|start"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="-4dp"
            android:background="@drawable/ic_circle"
            android:contentDescription="@string/unread"
            android:backgroundTint="@color/backgroundInfo"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/titleWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                style="@style/TextFont.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                tools:text="Emily WithAReallyLongLastName" />

            <ImageView
                android:id="@+id/attachment"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/attachment_icon"
                android:tint="@color/textDark"
                app:srcCompat="@drawable/ic_attachment" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/star_icon"
                android:src="@drawable/ic_star_solid" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                tools:text="Yesterday" />

        </LinearLayout>

        <TextView
            android:id="@+id/subject"
            style="@style/TextFont.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            tools:text="This is my subject" />

        <TextView
            android:id="@+id/message"
            style="@style/TextFont.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/textDark"
            android:textSize="14sp"
            tools:text="Here is some text of the message" />

    </LinearLayout>

</LinearLayout>
