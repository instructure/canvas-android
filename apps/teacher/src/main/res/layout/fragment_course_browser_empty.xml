<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="2dp"
        tools:background="#00bcd5"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/courseEmptyImage"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:tint="@color/backgroundMedium"
            app:srcCompat="@drawable/ic_courses" />

        <TextView
            android:id="@+id/textCourseName"
            style="@style/TextFont.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:textColor="#2D3B45"
            android:textSize="24sp"
            tools:text="Biology 101" />

        <TextView
            android:id="@+id/textCourseTerm"
            style="@style/TextFont.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textColor="@color/textDark"
            android:textSize="16sp"
            tools:text="Spring 2016" />

    </LinearLayout>

</RelativeLayout>
