<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#EEE">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke
                android:width="1dp"
                android:color="#C7CDD1"/>
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/black"/>
        </shape>
    </item>

</ripple>