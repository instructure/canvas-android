<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/selectCourse"
        style="@style/TextStyle.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/whichCourse" />

    <TextView
        android:id="@+id/allTeachers"
        style="@style/TextStyle.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectCourse"
        android:layout_marginBottom="10dp"
        android:text="@string/allTeachers" />

    <Spinner
        android:id="@+id/courseSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/allTeachers"
        android:minHeight="48dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_below="@id/courseSpinner"
        android:layout_marginBottom="10dp"
        android:hint="@string/composeMessage" />

</RelativeLayout>