<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/submissionEntryAudio"
        style="@style/SubmissionPickerDialogItem"
        tools:ignore="UseCompoundDrawables"
        tools:visibility="visible">

        <ImageView
            android:paddingStart="2dp"
            style="@style/SubmissionPickerDialogIcon"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_audio"/>

        <TextView
            style="@style/TextFont.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recordAudio"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/submissionEntryVideo"
        style="@style/SubmissionPickerDialogItem"
        tools:ignore="UseCompoundDrawables"
        tools:visibility="visible">

        <ImageView
            style="@style/SubmissionPickerDialogIcon"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_video"/>

        <TextView
            style="@style/TextFont.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recordVideo"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/submissionEntryMediaFile"
        style="@style/SubmissionPickerDialogItem"
        tools:ignore="UseCompoundDrawables"
        tools:visibility="visible">

        <ImageView
            style="@style/SubmissionPickerDialogIcon"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_media_black"/>

        <TextView
            style="@style/TextFont.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chooseMediaFile"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>
