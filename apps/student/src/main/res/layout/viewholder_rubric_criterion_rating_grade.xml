<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rubric_criterion_rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/rubric_criterion_rating_points"
        android:gravity="start|center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        style="@style/TextStyle.Primary"/>

    <TextView
        android:id="@+id/rubric_criterion_rating_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/checkMark"
        android:gravity="end|center_vertical"
        style="@style/TextStyle.Primary.SingleLine"/>

    <View
        android:id="@+id/checkMark"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
