<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/scrollInstructions"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/vd_panda_online_submissions" />

        <TextView
            style="@style/TextFont.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:text="@string/commentSubmissionTypeExternalTool"
            android:textColor="@color/defaultTextDark"
            android:textSize="20sp" />

        <TextView
            style="@style/TextFont.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:focusable="true"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:text="@string/speedGraderExternalToolMessage"
            android:textColor="@color/defaultTextGray"
            android:textSize="12sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/viewLtiButton"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:text="@string/openTool" />

    </LinearLayout>

</ScrollView>
