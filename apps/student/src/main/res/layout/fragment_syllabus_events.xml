<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/syllabusEventsRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/viewholder_card_generic"
        tools:visibility="gone" />


    <com.instructure.student.view.EmptyView
        android:id="@+id/syllabusEmptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/syllabusEventsError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="48dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:importantForAccessibility="no"
            android:src="@drawable/vd_warning_filled"
            android:tint="@color/alertRed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/syllabusEventsError"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/syllabusRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/defaultActionColor"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:text="@string/retry"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>