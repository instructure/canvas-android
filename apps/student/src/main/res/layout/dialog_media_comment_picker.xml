<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/audioComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextFont.Regular"
        android:text="@string/addAudioComment"
        android:textSize="16sp"
        android:drawableStart="@drawable/vd_audio"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:drawablePadding="18dp"
        android:background="?attr/selectableItemBackground"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/videoComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextFont.Regular"
        android:text="@string/addVideoComment"
        android:textSize="16sp"
        android:drawableStart="@drawable/vd_video"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:drawablePadding="18dp"
        android:background="?attr/selectableItemBackground"
        tools:visibility="visible" />

</LinearLayout>