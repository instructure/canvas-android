<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSubmissionLayout"
    android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/addCommentNoEllipsis"
            android:contentDescription="@string/addCommentNoEllipsis"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <Button
            android:id="@+id/addSubmission"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:textAllCaps="true"
            android:textSize="15sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/addSubmissionInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        app:srcCompat="@drawable/vd_info"
        android:layout_gravity="end|center_vertical"
        android:visibility="gone"
        android:contentDescription="@string/addSubmission"/>

</FrameLayout>