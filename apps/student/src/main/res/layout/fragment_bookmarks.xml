<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.instructure.student.features.bookmarks.BookmarksViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.bookmarks.BookmarksFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ToolBarPopupStyle"
            app:theme="@style/ToolBarStyle"
            app:title="@string/bookmarks"
            app:titleTextColor="@android:color/black" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:onRefreshListener="@{() -> viewModel.refresh()}"
            app:refreshState="@{viewModel.state}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bookmarksRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:recyclerViewItemViewModels="@{viewModel.data.items}"
                app:useDiffUtil="@{true}"
                tools:listitem="@layout/item_bookmark" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <com.instructure.pandautils.views.EmptyView
            android:id="@+id/bookmarkEmptyView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:emptyViewState="@{viewModel.state}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>