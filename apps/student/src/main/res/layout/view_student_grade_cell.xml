<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gradeCell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/submittedState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/submittedTitle"
            style="@style/TextFont.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/submissionStatusSuccessTitle"
            android:textColor="@color/alertGreen"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/submittedSubtitle"
            style="@style/TextFont.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="@string/submissionStatusSuccessSubtitle"
            android:textColor="@color/defaultTextDark"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gradeState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <FrameLayout
            android:layout_width="128dp"
            android:layout_height="128dp">

            <com.instructure.student.mobius.assignmentDetails.ui.gradeCell.DonutChartView
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"/>

            <ImageView
                android:id="@+id/completeIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_checkmark_large"
                tools:tint="@color/canvasDefaultAccent"
                tools:visibility="gone"/>

            <ImageView
                android:id="@+id/incompleteIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:tint="@color/defaultTextGray"
                app:srcCompat="@drawable/ic_x_large"
                tools:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/defaultTextDark"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    tools:text="89"/>

                <TextView
                    android:id="@+id/pointsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/canvasAPI_points"
                    android:textColor="@color/defaultTextDark"/>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/defaultTextDark"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="89%"/>

            <TextView
                android:id="@+id/outOf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/defaultTextDark"
                tools:text="Out of 100 pts"/>

            <TextView
                android:id="@+id/latePenalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/canvasDefaultAccent"
                android:textSize="12sp"
                tools:text="Late Penalty (-2 pts)"/>

            <TextView
                android:id="@+id/finalGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/defaultTextDark"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Final Grade: 89 pts"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <com.instructure.student.mobius.assignmentDetails.ui.gradeCell.GradeStatisticsView
            android:id="@+id/statisticsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" />

        <LinearLayout
            android:id="@+id/statisticsTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/minLabel"
                style="@style/TextFont.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/defaultTextGray"
                android:gravity="start"
                tools:text="Low: 1.0" />

            <TextView
                android:id="@+id/meanLabel"
                style="@style/TextFont.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/defaultTextGray"
                android:gravity="center"
                tools:text="Mean: 7.2" />

            <TextView
                android:id="@+id/maxLabel"
                style="@style/TextFont.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/defaultTextGray"
                android:gravity="end"
                tools:text="High: 9.5" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
