<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:id="@+id/recordingContent"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recordingTitle"
            style="@style/TextFont.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Recording 1" />

        <TextView
            android:id="@+id/recordingDate"
            style="@style/TextFont.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultTextGray"
            tools:text="Mar 1 at 3:16pm" />

        <TextView
            android:id="@+id/recordingDuration"
            style="@style/TextFont.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultTextDark"
            tools:text="13 Minutes" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/recordingProgressBar"
        android:indeterminateTint="@color/defaultTextGray"
        android:layout_width="32dp"
        android:layout_height="32dp" />

</LinearLayout>
