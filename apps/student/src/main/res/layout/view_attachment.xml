<com.instructure.student.view.AttachmentDogEarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/attachment_view_width"
    android:layout_height="@dimen/attachment_view_height"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/previewImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/attachmentColorMisc"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/attachmentIcon"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_attachment"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/attachmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:ellipsize="start"
        android:fontFamily="sans-serif-medium"
        android:lines="3"
        android:textColor="@color/white"
        android:textSize="11sp"
        tools:ignore="SmallSp"
        tools:text="attachment_name_which_is_really_long.docx"/>

    <ImageButton
        android:id="@+id/actionButton"
        android:layout_width="24dp"
        android:layout_height="28dp"
        android:layout_gravity="bottom|end"
        android:background="#22000000"
        android:contentDescription="@string/downloadAttachment"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:tint="#FFF"
        app:srcCompat="@drawable/ic_download"/>

</com.instructure.student.view.AttachmentDogEarLayout>
