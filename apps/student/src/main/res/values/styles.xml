<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Transparent" parent="CanvasMaterialTheme_Default">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.Transparent.NoAnimationOrBackground" parent="CanvasMaterialTheme_Default">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Used for stand alone PSPDFKit activity, pdf fragment uses values in CanvasMaterialTheme_Default-->
    <style name="PSPDFKitTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ash</item>
        <item name="colorAccent">@color/ash</item>
        <item name="colorPrimaryDark">@color/ash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:alertDialogTheme">@style/CanvasDialogTheme_Default</item>
        <item name="alertDialogTheme">@style/CanvasDialogTheme_Default</item>
        <item name="pspdf__annotationCreationToolbarIconsStyle">@style/PSPDFAnnotationCreationToolbarIconsStyle</item>
        <item name="pspdf__actionBarIconsStyle">@style/PSPDFKitActionBarIconsStyle</item>
        <item name="pspdf__contextualToolbarStyle">@style/ContextualToolbarStyle</item>
    </style>

    <style name="PSPDFKitActionBarIconsStyle">
        <item name="pspdf__iconsColor">@color/white</item>
        <item name="pspdf__iconsColorActivated">@color/textInfo</item>
    </style>

    <style name="ContextualToolbarStyle">
        <item name="pspdf__backgroundColor">@color/ash</item>
        <item name="pspdf__submenuBackgroundColor">@color/licorice</item>
        <item name="pspdf__iconsColor">@color/white</item>
    </style>

    <style name="AnnotationCreationToolbarIconsStyle">
        <item name="pspdf__iconsColor">@color/white</item>
        <item name="pspdf__highlightIcon">@drawable/ic_highlighter_icon</item>
        <item name="pspdf__strikeoutIcon">@drawable/ic_strike_through_icon</item>
        <item name="pspdf__stampIcon">@drawable/ic_stamp_icon</item>
        <item name="pspdf__inkPenIcon">@drawable/ic_ink_icon</item>
        <item name="pspdf__freeTextIcon">@drawable/ic_text_box_icon</item>
        <item name="pspdf__squareIcon">@drawable/ic_square_icon</item>
    </style>

    <style name="AnnotationEditingToolbarIconsStyle">
        <item name="pspdf__iconsColor">@color/white</item>
        <item name="pspdf__deleteIcon">@drawable/ic_trash</item>
        <item name="pspdf__editIcon">@drawable/ic_edit</item>
    </style>

    <style name="AnnotationNoteHinter">
        <item name="pspdf__noteHinterColor">@color/textInfo</item>
        <item name="pspdf__noteHinterAlpha">255</item>
        <item name="pspdf__noteHinterIcon">@drawable/ic_annotation_comment_indicator</item>
    </style>

    <style name="StampPickerStyle">
        <item name="pspdf__maxHeight">380dp</item>
        <item name="pspdf__maxWidth">100dp</item>
        <item name="pspdf__backgroundColor">@color/backgroundLightest</item>
    </style>

    <style name="ModalDialogStyle">
        <item name="pspdf__titleBackground">@color/ash</item>
    </style>

    <style name="PropertyInspector">
        <item name="pspdf__backgroundColor">@color/backgroundLightest</item>
        <item name="pspdf__textColor">@color/textDarkest</item>
    </style>

    <style name="Theme.Notorious" parent="CanvasMaterialTheme_Default">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--Text Styles-->
    <style name="TextStyle.Primary.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextStyle.Primary.CardView">
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="TextStyle.Secondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="TextStyle.Secondary.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextStyle.Secondary.Dark">
        <item name="android:textColor">@color/textDarkest</item>
    </style>

    <style name="TextStyle.Tertiary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="TextStyle.Tertiary.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextStyle.Tertiary.Dark">
        <item name="android:textColor">@color/textDarkest</item>
    </style>

    <style name="TextStyle.Primary.SingleLine.GradeWidget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textDarkest</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TermSpinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:background">@color/backgroundLightest</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="NavigationDrawerItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?android:listPreferredItemHeightSmall</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:tint">@color/textDarkest</item>
    </style>

    <style name="NavigationDrawerIcon">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textColor">@color/textDarkest</item>
        <item name="android:tint">@color/textDarkest</item>
    </style>

    <style name="LightStatusBarDialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">#EEE</item>
    </style>

    <style name="TextInputLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ThemeSpinner">
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#C7CDD1</item>
        <item name="android:height">1dp</item>
    </style>

    <style name="OverrideViewTextInputLayoutDate">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.6</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="OverrideViewTextInputLayoutTime">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="OverrideViewEditText" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:editable">false</item>
        <item name="android:text">--</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:textColorHint">@color/textDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubmissionPickerDialogItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SubmissionPickerDialogIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:tint">@color/textDark</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:headerMonthTextAppearance">@style/DatePickerTextAppearance</item>
        <item name="android:headerBackground">@color/licorice</item>
    </style>

</resources>
