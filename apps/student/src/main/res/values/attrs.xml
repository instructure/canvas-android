<resources>

    <declare-styleable name="AttachmentLayout">
        <attr name="al_spacing" format="dimension" />
        <attr name="al_previewChildCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="AttachmentDogEarLayout">
        <attr name="adl_dogear_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SubmissionCommentBubble">
        <attr name="ctv_targetMargin" format="dimension"/>
        <attr name="ctv_tailRadius" format="dimension"/>
        <attr name="ctv_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CommentTextView">
        <attr name="bubbleColor" format="color"/>
        <attr name="targetAvatarId" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CommentView">
        <attr name="comment_direction" format="enum">
            <enum name="INCOMING" value="0"/>
            <enum name="OUTGOING" value="1"/>
        </attr>
        <attr name="comment_bubbleColor" format="color"/>
        <attr name="comment_textColor" format="color"/>
        <attr name="comment_previewText" format="string"/>
        <attr name="comment_previewName" format="string"/>
        <attr name="comment_previewAvatar" format="reference"/>
    </declare-styleable>

</resources>
