<resources>

    <style name="CanvasMaterialTheme_Default" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/defaultPrimary</item>
        <item name="colorPrimaryDark">@color/defaultPrimaryDark</item>
        <item name="colorAccent">@color/defaultAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/canvasBackgroundWhite</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:alertDialogTheme">@style/CanvasDialogTheme_Default</item>
        <item name="alertDialogTheme">@style/CanvasDialogTheme_Default</item>
    </style>

    <style name="CanvasDialogTheme_Default" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/defaultPrimary</item>
        <item name="colorPrimaryDark">@color/defaultPrimaryDark</item>
        <item name="colorAccent">@color/defaultAccent</item>
        <item name="android:colorPrimary">@color/defaultPrimary</item>
        <item name="android:colorPrimaryDark">@color/defaultPrimaryDark</item>
        <item name="android:colorAccent">@color/defaultAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
