<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="@color/blueAnnouncement">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/spinner_avatar_size"
        android:layout_height="@dimen/spinner_avatar_size"
        android:contentDescription="@string/student_avatar"
        android:background="@drawable/ic_cv_user"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userName"
        tools:text="Student Name"
        style="@style/TextFont.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</LinearLayout>
